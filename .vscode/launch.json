    "version": "0.2.0",
    "configurations": [



        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch) MainAPP",
            "request": "launch",
            "mainClass": "com.unife.project.MainApp", // Sostituisci con il nome della tua classe principale
            //"projectName": "smart-farm-management", // Sostituisci con il nome del tuo progetto
            //"preLaunchTask": "mvn clean compile",
            
            "vmArgs": "--module-path \"${workspaceFolder}\"/target/dependency --add-modules javafx.controls,javafx.fxml"
        },
        {
            "type": "java",
            "name": "MainApp",
            "request": "launch",
            "mainClass": "com.unife.project.MainApp",
            "projectName": "smart-farm-management"
        }
    ]
}