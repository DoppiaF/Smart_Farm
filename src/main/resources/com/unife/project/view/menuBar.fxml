<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unife.project.controller.MenuBarController" alignment="TOP_RIGHT" spacing="10">
    <children>
        <Button fx:id="loginButton" text="Log In" onAction="#handleGoLogin">
            <graphic>
                <ImageView fx:id="loginIcon" fitHeight="16" fitWidth="16" />
            </graphic>
        </Button>
         <!-- Bottone di Logout -->
        <Button fx:id="logoutButton" text="Log Out" onAction="#handleLogout" visible="false">
            <graphic>
                <ImageView fx:id="logoutIcon" fitHeight="16" fitWidth="16" />
            </graphic>
        </Button>
        <!-- Bottone di Area Personale -->
        <Button fx:id="areaPersonaleButton" text="Area Personale" onAction="#handleAreaPersonaleButton" visible="false">
            <graphic>
                <ImageView fx:id="personalAreaIcon" fitHeight="16" fitWidth="16" />
            </graphic>
        </Button>
    </children>
</HBox>