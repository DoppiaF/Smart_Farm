<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unife.project.controller.PastoreController">
    <children>
        <fx:include source="menuBar.fxml" />
        <VBox layoutY="30.0" spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="10.0">
            <HBox spacing="10.0">
                <Button text="Aggiungi" onAction="#handleAddAnimale" />
                <Button text="Modifica" onAction="#handleEditAnimale" />
                <Button text="Rimuovi" onAction="#handleRemoveAnimale" />
            </HBox>
            <TableView fx:id="stalleTable">
                <columns>
                    <TableColumn fx:id="nomeColumn" text="Nome" />
                    <TableColumn fx:id="tipoColumn" text="Tipo" />
                    <TableColumn fx:id="dataColumn" text="Data" />
                </columns>
            </TableView>
            <VBox spacing="10.0">
                <BarChart fx:id="costiChart" title="Costi Complessivi">
                    <xAxis>
                        <CategoryAxis label="Mese" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Valore" />
                    </yAxis>
                </BarChart>
                <BarChart fx:id="guadagniChart" title="Guadagni Totali">
                    <xAxis>
                        <CategoryAxis label="Mese" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Valore" />
                    </yAxis>
                </BarChart>
            </VBox>
        </VBox>
    </children>
</AnchorPane>